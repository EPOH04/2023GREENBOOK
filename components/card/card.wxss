.image-parent {
    width: 240rpx;
    height: 240rpx;
    /* 确保宽度和高度相等，形成正方形 */
    position: relative;
    overflow: hidden;
    /* 裁剪溢出的内容 */
    border-radius: 10px;
}

.image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    /* 填充整个容器，超出部分裁剪 */
}

.title {
    width: auto;
    top: 76%;
    left: 20rpx;
    height: 48px;
    position: absolute;
    font-size: 20px;
    font-weight: 700;
    margin: auto;
    text-align: center;
    background: transparent;
    transform: translateY(-50%);
    color: white;
}

.content {
    width: auto;
    top:83%;
    left: 20rpx;
    text-align: left; /* 设置文本左对齐 */
    position: absolute;
    font-size: 12px;
    font-weight: 400;
    margin: auto;
    text-align: center;
    color: white;
    line-height: 11px;
    letter-spacing: 0px;
}

