.container{
  width: 660rpx;
  height: 188rpx;
  background-color: rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 15rpx;
}
.img{
  width: 140rpx;
  height: 140rpx;
  margin-left: 12rpx;
}
.img image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
}
.number{
  width: 38rpx;
  height: 40rpx;
  border-radius: 10rpx;
  background: rgba(61, 60, 60, 0.6);
  left: 51px;
  /** 文本 */
  font-size: 20rpx;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 40rpx;
  color: rgba(255, 255, 255, 1);
  text-align:center;
  /* 位置 */
  position: relative;
  top: -150rpx;
  left: 0rpx;
}
.type{
  width: 58rpx;
  height: 40rpx;
  background: rgba(76, 114, 157, 0.9);
  /** 文本 */
  font-size: 20rpx;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 40rpx;
  color: rgba(247, 247, 247, 1);
  text-align: center;
  /* 位置 */
  position: relative;
  top: -190rpx;
  left: 38rpx;
}
.description{
  width: 480rpx;
  height: 140rpx;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.index{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.index-item{
  height: 30rpx;
  width: auto;
  border-radius: 10rpx;
  background: rgba(255, 255, 255, 1);
  border: 1rpx solid rgba(207, 207, 207, 1);
  /* 文本 */
  font-size: 20rpx;
  font-weight: 700;
  letter-spacing: 0px;
  /* 垂直居中 */
  line-height: 30rpx;
  color: rgba(52, 89, 133, 1);
  text-align: center;
  margin-left: 10rpx;
}

.text1{
  /* 文本1 */
  font-size: 28rpx;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 37rpx;
  color: rgba(0, 0, 0, 1);
  text-align: left;
  vertical-align: top;
}
