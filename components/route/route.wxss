.container{
  width: 684rpx;
  height: 130rpx;
  background: rgba(53, 54, 58, 0.8);
  display:flex;
  flex-direction: row;
  align-items: center;
  border-radius: 10rpx;
  opacity: 0.8;
}
.day{
  width: 64rpx;
  height: 90rpx;
  margin-left: 24rpx;
  margin-right: 25rpx;
  display: flex;
  flex-direction: column;
}
.day-item1{
  font-size: 24rpx;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 33rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}
.day-item2{
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 55rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}
.description{
  width: 440rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
}
.des-item1{
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 50rpx;
  color: rgba(255, 255, 255, 1);
  text-align: left;
  margin-top: 5rpx;
}
.des-item2{
  font-size: 20rpx;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 27rpx;
  color: rgba(224, 222, 222, 1);
  text-align: left;
  margin-top: 10rpx;
}
.detail{
  width: 78rpx;
  height: 42rpx;
  border-radius: 20rpx;
  background: rgba(69, 68, 68, 1);
  border: 2rpx solid rgba(255, 255, 255, 1);
  margin-right: 48rpx;
  margin-left: 48rpx;
  /** 文本 */
  font-size: 20rpx;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 42rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}