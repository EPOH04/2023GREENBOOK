/* pages/lu_xian/lu_xian.wxss */
/* 在page.wxss中 */
page {
  background-color: #a0c249; 
}
.row {
  display: flex;
  flex-direction: column;
  height: 600rpx; /* 容器高度 */
}
.part {
  background-color: #f0f0f0;
}
.top-part {
  height: 100rpx;
}
.middle-part {
  height: 300rpx; 
  display: flex;
  flex-direction: row; /* 子元素水平排列 */
  justify-content: space-between;
}
.bottom-part {
  height: 150rpx;
}
.text1 {
  margin-left: 20rpx;   /* 左边距 */
  margin-right: 20rpx;  /* 右边距 */
  position: absolute; /* 绝对定位 */
  top: 30rpx;         /* 距离容器顶部的距离 */
  font-weight: bold;
}
.text2 {
  margin-left: 180rpx;   /* 左边距 */
  margin-right: 20rpx;  /* 右边距 */
  position: absolute; /* 绝对定位 */
  top: 35rpx;         /* 距离容器顶部的距离 */
  font-size: 12px;
}
.col1 {
  width: 100rpx; /* 或使用flex-grow来分配空间 */
  height: 200rpx;
  background-color: #f0f0f0; /* 仅用于演示的背景颜色 */
  margin-left: 50rpx; /* 左边距为20rpx */
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 垂直方向上均匀分布 */
}
.col2 {
  width: 100rpx; /* 或使用flex-grow来分配空间 */
  height: 200rpx;
  background-color: #f0f0f0; /* 仅用于演示的背景颜色 */
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 垂直方向上均匀分布 */
}
.col3 {
  width: 100rpx; /* 或使用flex-grow来分配空间 */
  height: 200rpx;
  background-color: #f0f0f0; /* 仅用于演示的背景颜色 */
  margin-right: 100rpx; /* 右边距为20rpx */
}
.button-example {
  display: flex;
  margin-left: 50rpx; /* 左边距为20rpx */
  margin-right: 60rpx; /* 左边距为20rpx */
}