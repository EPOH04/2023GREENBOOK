.header {
  position: fixed;
  z-index: 10;
  /* 确保.header在.scroll之上 */
  width: 100%;
}

.title1 {
  left: 48px;
  top: 137px;
  width: 100%;
  height: 90rpx;
  opacity: 1;
  /** 文本1 */
  font-size: 20px;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 75rpx;
  color: rgba(0, 0, 0, 1);
  background-color: white;
  padding-left: 61rpx;
  padding-top: 20rpx;
  vertical-align: middle;
}

/* 搜索框样式 */
.search-container {
  display: flex;
  /* 使用flex布局让子元素水平排列 */
  align-items: center;
  /* 垂直居中对齐 */
  justify-content: space-between;
  /* 调整子元素之间的间距 */
  background-color: var(--bg-color-demo);
  padding: 29rpx 21rpx;
  background-color: rgba(206, 235, 143, 1)
}

.avatar-example {
  width: 4rpx;
  /* 设置头像的宽度 */
  height: 4rpx;
  /* 设置头像的高度 */
  margin-right: 10rpx;
  /* 根据需要调整头像与搜索框的间距 */
}

/* 搜索框样式，确保没有内边距或边框影响布局 */
.t-search {
  flex-grow: 1;
  /* 让搜索框占据剩余空间 */
  margin-left: 10rpx;
  /* 添加搜索框的左边距，与头像分隔开 */
  /* 根据需要调整其他样式，如高度、边框等 */
}

.scroll {
  height: 1500rpx;
  width: 100%;
  text-align: center;
  overflow: auto;
  /* 确保滚动视图可以滚动 */
  padding-top: 243rpx;
  -webkit-overflow-scrolling: touch;
  /* 启用iOS的平滑滚动 */
}

.scroll-row{
  margin-bottom: 30rpx;
  margin-left: 7rpx;
}