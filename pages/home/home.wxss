.search-container {
  display: flex;
  /* 使用flex布局让子元素水平排列 */
  align-items: center;
  /* 垂直居中对齐 */
  justify-content: space-between;
  /* 调整子元素之间的间距 */
  background-color: var(--bg-color-demo);
  padding: 16rpx 32rpx;
  background-color: rgba(157, 196, 73, 1);
}

.avatar-example {
  width: 4rpx;
  /* 设置头像的宽度 */
  height: 4rpx;
  /* 设置头像的高度 */
  margin-right: 10rpx;
  /* 根据需要调整头像与搜索框的间距 */
}

/* 搜索框样式，确保没有内边距或边框影响布局 */
.t-search {
  flex-grow: 1;
  /* 让搜索框占据剩余空间 */
  margin-left: 10rpx;
  /* 添加搜索框的左边距，与头像分隔开 */
  /* 根据需要调整其他样式，如高度、边框等 */
}

/* 其他样式保持不变 */
.dark,
.light {
  background-clip: content-box;
  color: #fff;
  font-size: 28rpx;
  line-height: 96rpx;
  margin-bottom: 32rpx;
  text-align: center;
}

.dark {
  background-color: #0052d9;
}

.light {
  background-color: #366ef4;
}

