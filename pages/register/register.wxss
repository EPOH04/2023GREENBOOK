/* pages/register/register.wxss */
.body{
position: absolute;
width: 100%;
height:100%;
opacity: 1;
border-radius: 40rpx;
background-color: rgba(160, 194, 73, 1);
display: flex;
flex-direction: column;
}
.container1{
position: relative;
width: 750rpx;
height: 40.5%;
opacity: 1;
border-radius: 40rpx;
background: linear-gradient(90deg, rgba(153, 186, 80, 0) 0%, rgba(160, 192, 73, 1) 0%, rgba(86, 161, 106, 0.88) 47.43%, rgba(85, 161, 107, 0.9) 64.88%, rgba(89, 162, 105, 0.84) 84.12%, rgba(77, 158, 110, 1) 100.6%);
/* 弹性布局 */
display: flex; 
justify-content: flex-start; /* 子元素向容器顶部排列 */
flex-direction: column; /* 设置为垂直排列 */
align-items: center; /* 垂直居中所有子元素 */
}
.container2{
position: absolute;
left: 90rpx;
top:27.5%;
width: 584.3rpx;
height: 61.87%;
opacity: 1;
background: rgba(255, 255, 255, 1);
border-radius: 40rpx;
box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
/* 弹性布局 */
display: flex; 
justify-content: flex-start; /* 子元素向容器顶部排列 */
flex-direction: column; /* 设置为垂直排列 */
}

.container1 image{
  margin-top: 20rpx;
  width: 198rpx;
  height: 174rpx;
}
.text1{
  /** 文本1 */
margin-top: 40rpx;
font-size: 40rpx;
font-weight: 400;
letter-spacing: -0.24px;
color: rgba(255, 255, 255, 1);
text-align: center;
}
.text2{
  /** 文本2 */
  font-size:14px;
  font-weight:400;
  letter-spacing:0px;
  color:rgba(255,255,255,1);
  text-align:center;
}
.container2 text{
/** 文本3 */
position: relative;
left: 24.3rpx;
font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
font-size: 16px;
font-weight: 400;
letter-spacing: 0px;
line-height: 20px;
color: rgba(6, 2, 32, 1);
text-align: left;
vertical-align: top;
}
.input-group{
  margin-top: 50rpx;
  display: flex;
  flex-direction: column; 
}
.input-group > view {
  margin-bottom: 18rpx; /* 在每个子元素下方设置外边距 */
}
.input-group > text {
  margin-bottom: 8rpx; /* 在每个子元素下方设置外边距 */
}
.input-container {
  position: relative;
  left: 24.3rpx;
  height: 84.46rpx;
  width: 91.6%;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  background:rgba(251,251,253,1);
}
.icon{
  height: 64.38rpx; 
  width: 70.74rpx;
  background-color: rgba(0,200,137,0.1);
  display: flex;
  justify-content: center; 
  align-items: center;
  border-radius: 20rpx;
}
.input-content{
  height: 100%;
  width: 100%;
  border-radius: 30rpx;
  --td-input-bg-color:rgba(251, 251, 253,1);
  --td-input-vertical-padding:18rpx;
}
.confirm-btn{
  margin: auto;
  width: 300rpx;
  --td-button-default-bg-color: rgba(0, 200, 136, 1);
  --td-button-font-weight:400;
  --td-button-default-color:white;
  --td-button-large-height:80rpx;
  --td-button-border-radius:40px;
}
.login-text{
  position: absolute;
  top: 90%; 
  width: 100%;
  font-size: 28rpx;
  text-align: center;
}
.login-text text{
  display: inline;
}
/* WXSS 文件 */
.login-text navigator {
  color: blue; /* 设置文本颜色为蓝色 */
  display: inline;
}



