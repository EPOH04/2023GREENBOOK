<view class="tab-bar">
    <view class="tab-bar-border"></view>
    <view wx:for="{{list}}" wx:key="index" class="tab-bar-item" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
        <image src="{{selected === index && item.is_text  ? item.selectedIconPath : item.iconPath}}"></image>
        <view class="default-text {{selected === index ? 'selected-text' : ''}}">{{item.text}}</view>
    </view>
</view>